---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class="mx-auto flex w-fit flex-col gap-8 divide-gray-300 px-8 py-16 md:flex-row md:gap-0 md:divide-x md:py-12 lg:px-0"
>
  <div
    class="w-full shrink-0 border-b border-gray-400 md:w-48 md:border-b-0 md:pr-6"
  >
    <h2 class="text-4xl font-bold md:text-2xl lg:text-3xl">{title}</h2>
  </div>
  <div class="flex-1 space-y-8 md:max-w-prose md:pl-6">
    <slot />
  </div>
</section>
